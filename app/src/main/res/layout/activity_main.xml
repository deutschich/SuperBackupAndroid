<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/select_target_directory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_target_directory" />

    <!-- Button zum Auswählen des Quellordners -->
    <Button
        android:id="@+id/select_source_folder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_source_folder" />

    <!-- Button für Backup -->
    <Button
        android:id="@+id/backup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup" />

    <!-- Button für Wiederherstellung -->
    <Button
        android:id="@+id/restore_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restore" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:fontFamily="sans-serif"
        android:text="Thanks for using my tool!                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        This project is © deutschich 2025" />

</LinearLayout>
